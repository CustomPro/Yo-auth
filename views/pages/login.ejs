<link rel="stylesheet" type="text/css" href="/public/stylesheets/dialog-box.css">
<link rel="stylesheet" type="text/css" href="/public/libs/css/bootstrap-social.css">
<script type="text/javascript" src="/public/libs/js/validate.min.js"></script>

<div class="dialog-box" style="width: 400px;">
  <div class="panel panel-info">
    <div class="panel-body">
      <div class="text-center">
        <img src="/public/images/account/meetrum_io_color.jpg" style="width: 82%; user-select: none; margin-bottom: 7px;">
      </div>

      <form id="login" class="form-horizontal" role="form" action="/login" method="post" data-toggle="validator" style="display: inline-block; width: 100%;">
        <% if (locals.error) { %>
        <div class="form-group form-alert">
          <div class="alert alert-danger">
            <%= locals.error %>
          </div>
        </div>
        <% } %>

        <% if (locals.success) { %>
        <div class="form-group form-alert">
          <div class="alert alert-success">
            <%= locals.success %>
          </div>
        </div>
        <% } %>

        <% if (locals.logout) { %>
        <div class="form-group form-alert">
          <div class="alert alert-success">
            <%= locals.logout %>
          </div>
        </div>
          <% } %>

        <div class="vertical-input-group has-feedback">
          <input type="text"
                 pattern="^[_A-z0-9]{1,}$"
                 maxlength="50"
                 name="username"
                 class="form-control"
                 id="username"
                 placeholder="<%= __('Username') %>"
                 required>
          <input id="password"
                 type="password"
                 class="form-control"
                 name="password"
                 placeholder="<%= __('Password') %>"
                 maxlength="50"
                 required>
        </div>

        <button type="submit" value="Submit" class="btn btn-primary pull-right" style="width: 100%; margin-top: 1em;">
          <%= __('LogIn') %>
        </button>
      </form>

      <hr/>

      <div class="text-center social-buttons">
        <div class="signup-question">
          <%= __('DontHaveAnAccount') %>
          <a href="/signup">
            <%= __('SignUpHere') %>
          </a>
        </div>

        <a href="/oauth/twitter" class="btn btn-social-icon btn-twitter">
          <span class="fa fa-twitter"></span>
        </a>
        <a href="/oauth/facebook" class="btn btn-social-icon btn-facebook">
          <span class="fa fa-facebook"></span>
        </a>
        <a href="/oauth/linkedin" class="btn btn-social-icon btn-linkedin">
          <span class="fa fa-linkedin"></span>
        </a>
        <a href="/oauth/google" class="btn btn-social-icon btn-google">
          <span class="fa fa-google"></span>
        </a>
      </div>
    </div>
    <div class="bottom-line"></div>
  </div>
</div>
